<!DOCTYPE html>

<html>
<head>
    <base href="@Url.Content("~/")">
    <meta name="viewport" content="width=device-width" />
    <title>Adele's Events</title>

    @Styles.Render("~/content/styles")
</head>
<body data-ng-app="eventsApp">
    <div class="container">
        <div class="row">
            <h3 class="col-xs-12 text-center">@EventsApp.Resources.Resources.EventsListTitle</h3>
        </div>
        <div data-ui-view="">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <button class="btn btn- lg btn-warning"><span class="glyphicon glyphicon-refresh spinning"></span> Loading Events, Please Wait...</button>
                </div>
            </div>
            
        </div>
    </div>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBCtBfQp9papsHwc0Zkrswpv3w-0BP8rhg">
    </script>
    @Scripts.Render("~/bundles/libraries")
    @Scripts.Render("~/bundles/app")
</body>
</html>
